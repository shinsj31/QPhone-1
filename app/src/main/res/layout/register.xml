<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_peach"
        android:padding="10dp"
        android:id="@+id/idLayout"
        android:layout_marginBottom="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_layout"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/background2"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:id="@+id/id"
                android:inputType="text"
                android:layout_weight="1"
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:nextFocusDown="@+id/pw"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/id_check"
                android:text="중복확인"
                android:background="@drawable/background"
                />
        </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pw_layout"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/background2"
            android:paddingBottom="1dp"
            android:layout_below="@id/id_layout">

           <EditText
               android:id="@+id/pw"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@null"
               android:hint="비밀번호"
               android:inputType="textPassword"
               android:paddingBottom="15dp"
               android:paddingTop="15dp"/>

           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@drawable/ic_lock_outline_black_24dp"
               android:layout_gravity="center"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pw_check_layout"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/pw_layout"
            android:layout_marginTop="5dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="비밀번호 재확인"
                android:id="@+id/check_pw"
                android:layout_below="@id/pw"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_lock_black_24dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_peach"
        android:padding="10dp"
        android:layout_below="@id/idLayout"
        android:id="@+id/infoLayout"
        android:layout_marginBottom="20dp"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="휴대전화번호"
            android:id="@+id/phonenumber"
            android:background="@drawable/background2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="phone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:id="@+id/email"
            android:layout_below="@id/phonenumber"
            android:background="@null"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:inputType="textEmailAddress"/>



    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginBottom="10dp"
        android:id="@+id/registerBtn"
        android:layout_below="@id/infoLayout"
        android:background="#fc9d9a"/>



</RelativeLayout>