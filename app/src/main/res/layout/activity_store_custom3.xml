<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a502.drawex.store_custom3"
    android:background="@drawable/custom_frame"
    android:paddingLeft="20dp"
    android:paddingRight="40dp"
    android:paddingBottom="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Step2"
            android:textSize="30dp"/>
        <TextView
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   도장 개수 설정"/>
    </LinearLayout>
    <com.example.a502.drawex.CouponView
        android:id="@+id/couponView"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--총 도장개수-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="1. Total: "/>
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/stampNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"/>
                <Button
                    android:id="@+id/btnUp"
                    android:background="@drawable/round_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="#737373"
                    android:text="▲"
                    android:onClick="numberUpDown"/>
                <Button
                    android:id="@+id/btnDown"
                    android:background="@drawable/round_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="▼"
                    android:textColor="#737373"
                    android:onClick="numberUpDown"/>
            </LinearLayout>
            <!--한 행의 도장개수-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="2. Colums: "/>
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/rowNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5  "/>
                <Button
                    android:id="@+id/btnRowUp"
                    android:background="@drawable/round_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="#737373"
                    android:text="▲"
                    android:onClick="numberUpDown"/>
                <Button
                    android:id="@+id/btnRowDown"
                    android:background="@drawable/round_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="#737373"
                    android:text="▼"
                    android:onClick="numberUpDown"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_next"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/main_frame"
                android:text="next"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
